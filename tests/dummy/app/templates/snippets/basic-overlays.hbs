<GMap
  @lat="51.507568"
  @lng="-0.127762"
  @zoom={{9}}
  @styles={{this.myMapStyle}} as |g|>

  {{#each this.londonLocations as |location|}}
    <g.overlay
      @lat={{location.lat}}
      @lng={{location.lng}}
      @onMouseover={{action (mut location.active) true}}
      @onMouseleave={{action (mut location.active) false}}>

      <div class="tooltip {{if location.active "active"}}">
        Â£{{location.price}}
      </div>

    </g.overlay>
  {{/each}}

</GMap>